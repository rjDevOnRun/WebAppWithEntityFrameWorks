@model IEnumerable<WebApp.Models.Person>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Person List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Person" asp-action="Create"
               class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create a new Person
            </a>
        </div>
    </div>

    <br /><br/>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>First Name</th>
                
                    <th>Last Name</th>
                
                    <th>Email</th>
                
                    <th>Date Of Birth</th>
                
                    <th>Nationality</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var person in Model)
                {

                <tr>
                    <td width="15%">@person.FirstName</td>
                    <td width="15%">@person.LastName</td>
                    <td width="20%">@person.Email</td>
                    <td width="15%">@person.DataOfBirth</td>
                    <td width="15%">@person.Nationality</td>
                    <td width="20%" class="text-justify">
                        <div class="btn-group" role="group">
                            <a asp-controller="Person" 
                               asp-action="Edit"
                               asp-route-Id="@person.Id"
                               class="btn btn-primary btn-light mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="Person" 
                               asp-action="Delete"
                               asp-route-Id="@person.Id"
                               class="btn btn-danger">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>People data Not-Found!</p>
    }

</div>

